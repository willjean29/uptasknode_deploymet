mixin crearProyecto(proyecto = {})
    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || '' }` method="POST") 
        .campo
            label(for="nombre") Nombre Proyecto:
            input(type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto" value=`${proyecto.nombre ? proyecto.nombre : '' }`)
        .campo.enviar 
            input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Agregar' }` data-proyecto-id=`${proyecto.id ? proyecto.id : ''}` class="boton")
    
